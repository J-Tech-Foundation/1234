doctype html
html
  head
  body
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    h1 Break Kahoot
    style.
      input {
        font-weight: bold;
        font-family: "Comic Sans MS";
        text-align: center;
        border-radius: 10px;
        border: 1px solid black;
        color: black;
      }
      ::placeholder {
        color: black;
      }
      *:focus {
        outline: 0;
      }
      #start {
        border: 1px solid black;
        background: none;
        height: 30px;
        width: 200px;
        font-weight: bold;
        font-family: "Comic Sans MS";
        border-radius: 10px;
        vertical-align: middle;
      }
      #start:hover {
        background-color: #999;
      }
      body {
        text-align: center;
        padding: 10% 0;
      }
      input[type=number]::-webkit-inner-spin-button,
      input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }
    input#pin(type='number', placeholder='Game Pin')
    br
    br
    input#name(placeholder='Bot Name')
    br
    br
    input#amt(type='number', placeholder='Amount Of Bots')
    br
    br
    button#start Start
    script.
      const socket = io();
      
      $('#start').click(() => {
        
        socket.emit('spawn', JSON.stringify({
          pin: $('#pin').val(),
          name: $('#name').val(),
          amt: $('#amt').val()
        }));
        
        document.location.reload();
      });
